<h2>Editing book</h2>

<% if @book.errors.any? %>
 <div class="error_box">
  <h3><%= @book.errors.count %>errors prohibited this book from being saved.</h3>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   </ul>
 </div>
<% end %>



<%= form_with model: @book, url: book_path(@book[:id]), method: :patch do |f| %>
 <div class="field">
 <%= f.label :title %><br>
   <%= f.text_field :title %>
 </div>

<div class="field">
 <br><%= f.label :body %><br/>
   <%= f.text_area :body %>
</div>

<div class="submit">
 <%= f.submit 'Update Book' %>
</div>


<%= link_to "Show", book_path(@book.id) %>
   |
<%= link_to "back", "/books" %>
<% end %>

