<%= flash[:notice] %>
<h1>Books</h1>
 
<body>
 <table> 
   <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
     </tr>
   </thead>
    <tbody>
       <% @books.each do |book| %>
        <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "show",book_path(book.id) %></td>
         <td><%= link_to "edit",edit_book_path(book.id) %></td>
         <td><%= link_to "destory",book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></td>
        </tr>
       <% end %>
    </tbody>
   </table>
</body>

<h2>New book</h2>
<% if @book.errors.any? %>
